<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:mx="library://ns.adobe.com/flex/halo"
			 width="100%"
			 height="100%"
			 mouseEnabled="false"
			 xmlns:components="com.comtaste.pantaste.components.*">
	<s:states>
		<s:State name="normal" />

		<s:State name="disabled" />
	</s:states>

	<fx:Metadata>
		[HostComponent("com.comtaste.pantaste.components.DashPanelTitleBar")]
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>

	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>

	<s:Group width="100%"
			 height="100%"
			 alpha="0.0"
			 mouseEnabled="false"
			 mouseChildren="false">
		<s:Rect width="100%"
				height="100%"
				topLeftRadiusX="10"
				topLeftRadiusY="10"
				topRightRadiusX="10"
				topRightRadiusY="10">
			<s:fill>
				<s:LinearGradient rotation="90">
					<s:GradientEntry color="0x555555" />

					<s:GradientEntry color="0x333333" />
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
	</s:Group>

	<s:Group width="100%" height="100%" mouseEnabled="false">
		<s:Label id="title" left="10" verticalCenter="0" />

		<components:DashPanelControls id="controls"
									  right="-5"
									  panel="{hostComponent.panel}"
									  top="-5"
									  mouseEnabled="true"
									  mouseChildren="true" />
	</s:Group>
</s:SparkSkin>
